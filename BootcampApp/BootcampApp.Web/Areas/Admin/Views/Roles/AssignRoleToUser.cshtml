@model AdminModel.AssignRoleToUserViewModel

<div class="row" style="min-height:600px">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcıya Rol Atama</h2>
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
            @foreach (var role in ViewBag.Roles)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role" id="@role" @(Model.SelectedRoles != null && Model.SelectedRoles.Contains(role) ? "checked" : "")>
                    <label for="@role" class="form-check-label">@role</label>
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Rol Ata" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-controller="Home" asp-action="UserList">Kullanıcı listesine geri dön</a>
        </div>
    </div>
</div>
