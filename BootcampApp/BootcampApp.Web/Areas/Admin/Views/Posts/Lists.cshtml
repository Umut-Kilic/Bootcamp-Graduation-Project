@model AdminModel.PostsViewModel
<div class="row">
    <div class="col-12">
        <h2>Post List</h2>
        <a href="/posts/create" class="btn btn-primary">New Post</a>
        <hr>
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 160px;">Resim</th>
                    <th>Başlık</th>
                    <th style="width: 160px;">IsActive</th>
                    <th style="width: 160px;">Düzenle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Posts)
                {
                    <tr>
                        <td><img src="~/postspictures/@item.Image" class="img-fluid" alt=""></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/posts/edit/@item.PostId" class="btn btn-primary">Düzenle</a>
                            <a href="#" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

