
@model List<AdminModel.UserViewModel>

<div class="row" style="min-height:550px">

    <h1 class="text-center mt-3">Üye Liste</h1>

    <table class="table table-striped mt-1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Roller</th>
                <th>Rol İşlemleri</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <user-role-names user-id="@item.Id"></user-role-names>
                    </td>
                    <td>
                        <a class="btn btn-outline-dark" asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.Id">Rol ata</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>







